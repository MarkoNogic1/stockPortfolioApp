<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Bootstrap Admin Theme</title>

    <!-- Bootstrap Core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- jQuery -->
    <script src="/vendor/jquery/jquery.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<!-- SCRIPTS -->
<script src="/js/EditPortfolio_Functions.js"></script>
<script src="/dist/js/stockDataRequester.js"></script>
<!-- SCRIPTS -->
    <%include navMenu%>

    <div id="wrapper">
        <!-- Navigation -->
        <div id="navMenu"></div>
        <script>
            $(function(){
                $("#navMenu").load("navMenu.ejs");
            });
        </script>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Edit Stock Portfolio</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#add" data-toggle="tab">Add</a>
                                </li>
                                <li><a href="#remove" data-toggle="tab">Remove</a>
                                </li>
                                <li><a href="#edit" data-toggle="tab">Edit</a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">

                                <!-- ======================================================================== -->
                                <!-- ======================================================================== -->
                                <!-- ADD DOMAIN -->

                                <div class="tab-pane fade in active" id="add">
                                    <h3>Add Stock</h3>

                                    <form role="form" id="addStockForm" action="/addstock" method="POST">

                                        <div class="form-group">
                                            <label>Stock to Add</label>
                                            <div class="form-group input-group">
                                                <input type="text" class="form-control" name="StockName" id="StockName">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Amount of Shares</label>
                                            <input class="form-control" name="ShareNumber" id="ShareNumber">
                                        </div>

                                        <div class="form-group">
                                            <label>Specify a Sector</label>
                                            <input class="form-control" name="SectorName" id="SectorName">
                                        </div>

                                        <div class="form-group">
                                            <label>Date of Acquisition</label>
                                            <input type="date" class="form-control" name="DateAquired" id="DateAquired">
                                        </div>

                                        <div class="form-group">
                                            <label>Value of the Stock</label>
                                            <input class="form-control" name="StockValue" id="StockValue">
                                        </div>

                                        <div class="form-group">
                                            <button type="button" class="btn btn-success" onclick="submit_ADD()">Add</button>
                                            <a href="home" class="btn btn-default" role="button" aria-pressed="true">Cancel</a>
                                        </div>

                                    </form>
                                </div>
                                <!-- ADD DOMAIN -->
                                <!-- ======================================================================== -->
                                <!-- ======================================================================== -->

                                <!-- ======================================================================== -->
                                <!-- ======================================================================== -->
                                <!-- REMOVE DOMAIN -->
                                <div class="tab-pane fade" id="remove">
                                    <h3>Remove Stock(s)</h3>

                                    <form id="removal_form" action="/deletestock" method="POST">
                                        <div class="form-group">
                                            <label>Select Stock(s) to Remove</label>
                                        </div>

                                        <div class="form-group">
                                            <select multiple class="form-control" name="RemoveSelect" id="StockSelector1">
                                            <!-- OPTIONS WILL BE ADDED DYNAMICALLY -->
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <button type="button" class="btn btn-danger" onclick="submit_REMOVE()">Remove</button>
                                            <a href="home" class="btn btn-default" role="button" aria-pressed="true">Cancel</a>
                                        </div>
                                    </form>

                                </div>
                                <!-- REMOVE DOMAIN -->
                                <!-- ======================================================================== -->
                                <!-- ======================================================================== -->

                                <!-- ======================================================================== -->
                                <!-- ======================================================================== -->
                                <!-- EDIT DOMAIN -->
                                <div class="tab-pane fade" id="edit">
                                    <h3>Edit Stock</h3>
                                    <form id="edit_form" action="/editstock" method="POST">
                                        <div class="form-group">
                                            <label>Select Stock to Edit</label>
                                            <select class="form-control" name="EditSelect" id="StockSelector2">
                                                <!-- STUFF PUT HERE-->
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label>Edit Date of Acquisition</label>
                                            <input type="date" class="form-control" name="EditDate">
                                        </div>

                                        <div class="form-group">
                                            <label>Edit Sector</label>
                                            <select class="form-control" name="EditSector">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label>Edit Amount of Shares</label>
                                            <input class="form-control" name="EditShares">
                                        </div>

                                        <div class="form-group">
                                            <label>Edit The Value of the Stock</label>
                                            <input class="form-control" name="EditValue" id="EditValue">
                                        </div>

                                        <div class="form-group">
                                            <button type="button" class="btn btn-success" onclick="submit_EDIT()">Edit Stock</button>
                                            <a href="home" class="btn btn-default" role="button" aria-pressed="true">Cancel</a>
                                        </div>
                                    </form>

                                </div>
                                <!-- EDIT DOMAIN -->
                                <!-- ======================================================================== -->
                                <!-- ======================================================================== -->

                            </div>
                        </div>
                    </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>
    <script> addOptions() </script>

</body>

</html>
